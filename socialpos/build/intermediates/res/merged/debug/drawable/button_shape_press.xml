            <corners android:radius="10dip" />

            <stroke android:width="2dp" android:color="#e5e5e5" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <solid android:color="@color/pay_list_item_press" />

            <corners android:radius="10dip" />

