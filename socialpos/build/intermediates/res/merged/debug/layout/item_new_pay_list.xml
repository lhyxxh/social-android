<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/pay_list_item"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/et_barcode"
            style="@style/pay_right_item2"
            android:layout_weight="2"
            android:text="@string/pay_left1" />

        <TextView
            android:id="@+id/et_super_code"
            style="@style/pay_right_item2"
            android:layout_weight="2"
            android:text="@string/pay_right12" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/pay_right_item2"
            android:layout_weight="2"
            android:text="@string/pay_right2" />

        <TextView
            android:id="@+id/tv_unit"
            style="@style/pay_right_item2"
            android:layout_weight="1"
            android:textColor="#00f"
            android:text="@string/pay_right3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/reduce" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/pay_right4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/add" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            style="@style/pay_right_item2"
            android:layout_weight="1"
            android:text="@string/pay_right5" />

        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>