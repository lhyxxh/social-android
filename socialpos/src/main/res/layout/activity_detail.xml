<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:background="@drawable/back"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
        	android:layout_margin ="20dp"
            android:orientation="vertical" >
            <TextView 
                android:id="@+id/app_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="社保消费系统"
                android:textColor="@color/search_blue"
                android:textSize="30sp" />
             <TextView 
                android:id="@+id/app_description"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:text="专为社保打造"
                android:textColor="@color/dark_grey"
                android:textSize="24sp" />
            
            <TextView 
                android:id="@+id/app_version"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="软件版本：v1.0.1"
                android:textColor="@color/dark_grey"
                android:textSize="20sp" />
            
             <TextView 
                android:id="@+id/update_time"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:text="更新时间：2016.08.11"
                android:textColor="@color/dark_grey"
                android:textSize="20sp" />
             
             <TextView 
                android:id="@+id/app_size"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:text="大小：10.0M"
                android:textColor="@color/dark_grey"
                android:textSize="20sp" />
             <TextView 
                android:id="@+id/update_detail"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:text="更新日志:\n1、页面布局\n2、背景色\n3、字体大小"
                android:textColor="@color/dark_grey"
                android:textSize="20sp" />
            
             <TextView 
                android:id="@+id/update_now"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/border_green"
                android:text="@string/update_now"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="30dp"
        	android:layout_marginBottom="40dp"  >

             <ImageView
                android:id="@+id/photo_right"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_gravity="right|top"
                android:background="@drawable/photo_right" />
            <ImageView
                android:id="@+id/photo_center"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/photo_center" />
            <ImageView
                android:id="@+id/photo_left"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_gravity="left|bottom"
                android:background="@drawable/photo_left" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>