<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:descendantFocusability="blocksDescendants" >

    <FrameLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/appstore_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/appstore_name"
                style="@style/text_18_dark_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name" />
            <!--  android:layout_height="46dp" -->

            <TextView
                android:id="@+id/appstore_detail"
                style="@style/text_16_white_grey_without_parent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:text="@string/name_detail" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_installed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/icon_installed"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/appstore_lay3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/appstore_update3"
            style="@style/text_16_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_green"
            android:text="@string/updata" />

        <TextView
            android:id="@+id/appstore_open3"
            style="@style/text_16_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/border_blue"
            android:text="@string/open" />

        <TextView
            android:id="@+id/appstore_uninstall3"
            style="@style/text_16_white_grey"
            android:background="@drawable/border_grey"
            android:text="@string/uninstall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appstore_lay2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/appstore_open2"
            style="@style/text_16_blue_without_parent"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:background="@drawable/border_blue"
            android:gravity="center"
            android:text="@string/open" />

        <TextView
            android:id="@+id/appstore_uninstall2"
            style="@style/text_16_white_grey_without_parent"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:text="@string/uninstall" />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/appstore_lay1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/appstore_install1"
            style="@style/text_16_blue_without_parent"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_blue"
            android:gravity="center"
            android:text="@string/install" />
    </LinearLayout>
</LinearLayout>